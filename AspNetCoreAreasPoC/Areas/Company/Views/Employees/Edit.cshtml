@model AspNetCoreAreasPoC.Areas.Company.Models.EmployeeDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" id="edit-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageBytes" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-5" id="image-box">
                <label asp-for="Image" class="control-label"></label>
                <div class="image-container">
                    <button type="button" class="close" aria-label="Close" id="close-btn">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <img src="@Model.ImagePath" class="img-fluid" />
                </div>
            </div>
            <div class="form-group" id="upload-new-image-box">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script type="text/javascript">
        $("#edit-form").ready(function () {
            $("#upload-new-image-box").hide();
        });
        $("#close-btn").click(function() {
            $("#upload-new-image-box").show();
            $("#image-box").hide();
        });
    </script>
    
}
